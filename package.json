{
	"name": "user-auth-example",
	"type": "module",
	"version": "0.1.3",
	"private": true,
	"scripts": {
		"db:generate": "drizzle-kit generate --name create_tables",
		"db:create:prod": "wrangler d1 create user-auth-example-db",
		"db:migrate:local": "wrangler d1 migrations apply DB --local",
		"db:migrate:prod": "wrangler d1 migrations apply DB --remote",
		"biome": "biome check --write --unsafe",
		"tsc": "tsc --noEmit",
		"test:unit": "bun test ./app",
		"test:e2e": "bun run --env-file=.env.test playwright test",
		"test:e2e:report": "playwright show-report --host 0.0.0.0",
		"dev": "vite",
		"build": "vite build --mode client && vite build",
		"preview": "bun run build && wrangler dev --ip 0.0.0.0",
		"deploy": "bun run build && wrangler deploy"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.2.2",
		"arctic": "^3.7.0",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.5",
		"honox": "0.1.53",
		"resend": "^6.8.0",
		"zod": "^4.3.6"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.12",
		"@cloudflare/workers-types": "^4.20260124.0",
		"@hono/vite-build": "^1.9.2",
		"@hono/vite-dev-server": "^0.24.1",
		"@playwright/test": "^1.58.0",
		"@tailwindcss/vite": "^4.1.18",
		"@types/bun": "^1.3.6",
		"mailosaur": "^10.0.0",
		"drizzle-kit": "^0.31.8",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.1",
		"wrangler": "^4.60.0"
	}
}
